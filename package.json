{
  "workspaces": [
    "frontned",
    "backend",
    "tasks",
    "shared"
  ],
  "name": "dragon",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "query-string": "^7.1.1",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "lint:fs": "ls-lint",
    "lint:css": "npm run lint:css --workspaces --if-present",
    "lint:js": "npm run lint:js --workspaces --if-present",
    "lint": "npm run lint:fs && npm run lint --workspaces --if-present"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "lint-staged": {
    "*": "npm run lint:fs",
    "*.{ts,tsx,json,scss}": "prettier --write",
    "tasks/**/*.{ts,tsx}": "npm run lint:js"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.6.0",
    "@ls-lint/ls-lint": "^1.11.2",
    "@types/jasmine": "^4.3.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "eslint": "^8.24.0",
    "eslint-config-standard-with-typescript": "^23.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.3.0",
    "eslint-plugin-promise": "^6.0.1",
    "eslint-plugin-react": "^7.31.8",
    "jasmine": "^4.5.0",
    "lint-staged": "^13.0.3",
    "prettier": "2.7.1",
    "simple-git-hooks": "^2.8.0",
    "stylelint": "^14.2.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^24.0.0",
    "stylelint-config-standard-scss": "^3.0.0",
    "stylelint-order": "^5.0.0",
    "stylelint-scss": "^4.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  }
}
